            <!-- android:radius 弧形的半径 -->
            <corners android:radius="18dip" />
            <!-- padding：Button里面的文字与Button边界的间隔 -->
            <padding android:bottom="3dp" android:left="5dp" android:right="5dp" android:top="3dp" />
        </shape>
    </item>  
</selector>  