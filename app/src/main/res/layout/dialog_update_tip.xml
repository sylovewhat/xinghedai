<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@android:color/transparent"
    android:paddingLeft="10dip"
    android:paddingRight="10dip" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_popupwindow"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/title"
                android:layout_width="fill_parent"
                android:layout_height="35dip"
                android:layout_marginTop="8dip"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/message"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dip"
                android:gravity="center|left"
                android:text=""
                android:textColor="@color/black"
                android:textSize="15sp" />
            
            <com.tc.emms.widget.ColorfulProgressBar
                android:id="@+id/seekbar"
                android:layout_width="fill_parent"
                android:layout_height="38dip"
                android:layout_marginLeft="8dip"
                android:layout_marginRight="8dip"
                android:layout_marginTop="18dip"
                android:layout_marginBottom="18dip"
                android:gravity="center"
                android:visibility="gone"/>

            <TextView
                style="@style/edit_group_line"
                android:layout_marginTop="8dip" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/b_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/main_backgroud"
            android:gravity="center"
            android:orientation="vertical" >

            <Button
                android:id="@+id/b_ok"
                android:layout_width="match_parent"
                android:layout_height="45dip"
                android:background="@drawable/selector_popupwindow"
                android:textColor="@color/main_blue"
                android:textSize="15sp" />

            <TextView style="@style/edit_group_line" />

            <Button
                android:id="@+id/b_cancel"
                android:layout_width="match_parent"
                android:layout_height="45dip"
                android:background="@drawable/selector_popupwindow_corners"
                android:text="@string/btn_text_cancel"
                android:textColor="@color/main_font_gray"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>